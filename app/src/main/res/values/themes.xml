<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--Theme.Material3.Dark.NoActionBar-->
    <style name="Theme.GitHubIssueTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <!-- Set navigation bar color -->
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/dark_gray</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_github</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubIssueTracker</item>
        <!-- Required for animated icons -->
        <!--<item name="windowSplashScreenAnimationDuration">2000</item>-->
    </style>
</resources>